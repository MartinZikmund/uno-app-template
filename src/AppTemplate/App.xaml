<Application
    x:Class="AppTemplate.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <!--  Load WinUI resources  -->
                <XamlControlsResources xmlns="using:Microsoft.UI.Xaml.Controls" />

                <!--  App Resources  -->
                <ResourceDictionary Source="ms-appx:///Resources/Values.xaml" />
                <ResourceDictionary Source="ms-appx:///Resources/Colors.xaml" />
                <ResourceDictionary Source="ms-appx:///Resources/Styles.xaml" />
                <ResourceDictionary Source="ms-appx:///Resources/Converters.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <!--  Add additional resources here  -->

        </ResourceDictionary>
    </Application.Resources>

</Application>
