<local:SettingsViewBase
    x:Class="AppTemplate.Views.SettingsView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:AppTemplate.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    mc:Ignorable="d">

    <ScrollViewer>
        <StackPanel
            Padding="24"
            Spacing="24">

            <TextBlock
                x:Uid="SettingsView.Title"
                Style="{ThemeResource TitleLargeTextBlockStyle}"
                Text="Settings" />

            <StackPanel Spacing="12">
                <TextBlock
                    x:Uid="SettingsView.ThemeLabel"
                    Style="{ThemeResource SubtitleTextBlockStyle}"
                    Text="Theme" />

                <RadioButtons
                    x:Uid="SettingsView.ThemeOptions"
                    SelectedIndex="{x:Bind ViewModel.SelectedThemeIndex, Mode=TwoWay}">
                    <RadioButton
                        x:Uid="SettingsView.ThemeDefault"
                        Content="Use system setting" />
                    <RadioButton
                        x:Uid="SettingsView.ThemeLight"
                        Content="Light" />
                    <RadioButton
                        x:Uid="SettingsView.ThemeDark"
                        Content="Dark" />
                </RadioButtons>
            </StackPanel>

        </StackPanel>
    </ScrollViewer>
</local:SettingsViewBase>
