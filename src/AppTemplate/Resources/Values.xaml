<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!--  Standard Spacing  -->
    <x:Double x:Key="SmallSpacing">4</x:Double>
    <x:Double x:Key="MediumSpacing">8</x:Double>
    <x:Double x:Key="LargeSpacing">16</x:Double>
    <x:Double x:Key="ExtraLargeSpacing">24</x:Double>

    <!--  Page Layout  -->
    <Thickness x:Key="PagePadding">24,24,24,24</Thickness>
    <Thickness x:Key="PagePaddingNarrow">16,16,16,16</Thickness>

    <!--  Card Layout  -->
    <Thickness x:Key="CardPadding">16,16,16,16</Thickness>
    <CornerRadius x:Key="CardCornerRadius">8</CornerRadius>

    <!--  Title Bar  -->
    <x:Double x:Key="TitleBarHeight">48</x:Double>

    <!--  Button Sizes  -->
    <x:Double x:Key="IconButtonSize">40</x:Double>
    <x:Double x:Key="SmallIconButtonSize">32</x:Double>

    <!--  Border  -->
    <x:Double x:Key="DefaultBorderThickness">1</x:Double>
    <CornerRadius x:Key="DefaultCornerRadius">4</CornerRadius>
    <CornerRadius x:Key="LargeCornerRadius">8</CornerRadius>

    <!--  Responsive Breakpoints (for reference)  -->
    <!--  Narrow: 0-639  -->
    <!--  Medium: 640-1023  -->
    <!--  Wide: 1024+  -->

</ResourceDictionary>
