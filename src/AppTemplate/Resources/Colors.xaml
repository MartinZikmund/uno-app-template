<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <ResourceDictionary.ThemeDictionaries>
        <ResourceDictionary x:Key="Default">
            <Color x:Key="BrandColor">#005FB8</Color>
            <SolidColorBrush x:Key="BrandBrush" Color="{StaticResource BrandColor}" />
            <SolidColorBrush x:Key="AppOverlayBackgroundBrush" Color="#44000000" />
        </ResourceDictionary>
        <ResourceDictionary x:Key="Light">
            <Color x:Key="BrandColor">#005FB8</Color>
            <SolidColorBrush x:Key="BrandBrush" Color="{StaticResource BrandColor}" />
            <SolidColorBrush x:Key="AppOverlayBackgroundBrush" Color="#44FFFFFF" />
        </ResourceDictionary>
    </ResourceDictionary.ThemeDictionaries>

</ResourceDictionary>
